<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        style="@style/btn_style"
        android:background="@drawable/button_background"
        android:id="@+id/btnopencamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        />


    <Button
        style="@style/btn_style"
        android:background="@drawable/button_background"
        android:id="@+id/btnopenwebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Website"
        />


    <Button
        style="@style/btn_style"
        android:background="@drawable/button_background"
        android:id="@+id/btnopengallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Gallery"
        />

    <EditText
        android:id="@+id/numberdailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your number"
        android:inputType="number"
        />

    <Button
        style="@style/btn_style"
        android:background="@drawable/button_background"
        android:id="@+id/btnopendailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Open Dailer"
        />


    <ImageView
        android:id="@+id/galleryimage"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        />

</LinearLayout>